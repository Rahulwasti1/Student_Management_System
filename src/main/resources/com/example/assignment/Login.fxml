<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: DBE4EB;" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="com.example.assignment.Login">
    <children>
        <Pane layoutX="271.0" layoutY="158.0" prefHeight="260.0" prefWidth="367.0"
              style="-fx-background-color: white; -fx-background-radius: 10;">
            <children>
                <Text layoutX="121.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      style="-fx-font-family: Helvetica; -fx-fill: #4D7BF0;" styleClass="fony" text="Students System">
                    <font>
                        <Font fx:id="inikaFont" name="System Bold" size="22.0"/>
                    </font>
                </Text>
                <ImageView fitHeight="35.0" fitWidth="46.0" layoutX="74.0" layoutY="13.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../../ICON/Admin.png"/>
                    </image>
                </ImageView>
                <TextField fx:id="emailField" layoutX="35.0" layoutY="69.0" prefHeight="30.0" prefWidth="298.0"
                           promptText="Email"/>
                <PasswordField fx:id="passwordField" layoutX="35.0" layoutY="105.0" prefHeight="30.0" prefWidth="298.0"
                               promptText="Password"/>
                <ComboBox fx:id="roleCombo" layoutX="35.0" layoutY="145.0" prefHeight="30.0" prefWidth="298.0"
                          promptText="Select Your Role"/>
                <Button layoutX="35.0" layoutY="183.0" mnemonicParsing="false" onAction="#handleAdminLogin"
                        prefHeight="30.0" prefWidth="297.0" style="-fx-background-color: #4D7BF0; -fx-text-fill: white;"
                        text="Login">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Button>
                <Text layoutX="80.0" layoutY="232.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Don't have an Account?">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Text>
                <Button layoutX="194.0" layoutY="219.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0"
                        style="-fx-background-color: none; -fx-text-fill: #4D7BF0;" text="Create an account">
                    <padding>
                        <Insets top="-10.0"/>
                    </padding>
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Button>
                <Label fx:id="errorMessage" alignment="CENTER" layoutX="64.0" layoutY="48.0" prefHeight="17.0"
                       prefWidth="240.0" textFill="#ff0404"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
