<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="414.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/22"
            fx:controller="com.example.assignment.Admin.EditStaffFormController">
    <children>
        <AnchorPane prefHeight="496.0" prefWidth="305.0" style="-fx-background-color: #2C3E50;">
            <children>
                <Label layoutX="81.0" layoutY="14.0" style="-fx-font-size: 20; -fx-text-fill: #E4A511;"
                       text="Edit Staff Details"/>
                <Label layoutX="23.0" layoutY="55.0" style="-fx-text-fill: white;" text="Staff Id"/>
                <TextField fx:id="staffIdField" layoutX="23.0" layoutY="73.0" prefHeight="25.0" prefWidth="260.0"/>
                <Label layoutX="23.0" layoutY="115.0" style="-fx-text-fill: white;" text="Name"/>
                <TextField fx:id="nameField" layoutX="23.0" layoutY="132.0" prefHeight="26.0" prefWidth="260.0"/>
                <Label layoutX="23.0" layoutY="235.0" style="-fx-text-fill: white;" text="Number"/>
                <TextField fx:id="numberField" layoutX="23.0" layoutY="253.0" prefHeight="25.0" prefWidth="260.0"/>
                <Label layoutX="24.0" layoutY="175.0" style="-fx-text-fill: white;" text="Gender"/>
                <ComboBox fx:id="genderCombo" layoutX="25.0" layoutY="192.0" prefHeight="26.0" prefWidth="257.0"
                          promptText="Select Gender"/>
                <Label layoutX="25.0" layoutY="297.0" style="-fx-text-fill: white;" text="Email"/>
                <TextField fx:id="emailField" layoutX="25.0" layoutY="315.0" prefHeight="25.0" prefWidth="260.0"/>
                <Label layoutX="26.0" layoutY="359.0" style="-fx-text-fill: white;" text="Password"/>
                <PasswordField fx:id="passwordField" layoutX="26.0" layoutY="378.0" prefHeight="25.0"
                               prefWidth="260.0"/>
                <Button fx:id="addButton" layoutX="26.0" layoutY="429.0" mnemonicParsing="false" onAction="#onAddStaff"
                        prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #1ABC9C; -fx-text-fill: white;"
                        text="Update">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>
                <Label fx:id="idErrorLabel" alignment="CENTER" layoutX="23.0" layoutY="98.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Label fx:id="nameErrorLabel" alignment="CENTER" layoutX="23.0" layoutY="158.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Label fx:id="genderErrorLabel" alignment="CENTER" layoutX="23.0" layoutY="218.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Label fx:id="numberErrorLabel" alignment="CENTER" layoutX="23.0" layoutY="280.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Label fx:id="emailErrorLabel" alignment="CENTER" layoutX="24.0" layoutY="342.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Label fx:id="passwordErrorLabel" alignment="CENTER" layoutX="25.0" layoutY="403.0" prefHeight="17.0"
                       prefWidth="248.0" textAlignment="CENTER" textFill="#f27c7c"/>
                <Button fx:id="cancelButton" layoutX="160.0" layoutY="429.0" mnemonicParsing="false"
                        onAction="#onCancel" prefHeight="30.0" prefWidth="120.0"
                        style="-fx-background-color: #f27c7c; -fx-text-fill: white;" text="Cancel">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
