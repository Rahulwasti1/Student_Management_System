<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="314.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/22"
            fx:controller="com.example.assignment.Teacher.QuestionResponseController"
>
    <Label layoutX="14.0" layoutY="14.0" text="Question"/>
    <Label layoutX="15.0" layoutY="75.0" text="Message"/>
    <TextArea fx:id="message" layoutX="15.0" layoutY="98.0" prefHeight="151.0" prefWidth="570.0"
              promptText="Write a reply..." wrapText="true"/>
    <TextField fx:id="questionText" editable="false" layoutX="15.0" layoutY="31.0" prefHeight="25.0" prefWidth="570.0"/>
    <Button layoutX="273.0" layoutY="270.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="55.0" text="Send"
            fx:id="sendButton" onAction="#onSend"/>
</AnchorPane>
